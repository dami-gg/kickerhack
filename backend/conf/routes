# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.health

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Players
GET     /users                      controllers.Application.getUsers
GET     /users/:userId              controllers.Application.getUser(userId: Long)
POST    /users                      controllers.Application.addUser
GET    /test                       controllers.Application.test

# Tables
GET     /tables                       controllers.TableController.getTables
GET     /tables/:tableId              controllers.TableController.getTable(tableId: Long)
GET     /tables/:tableId/current-game controllers.TableController.getCurrentGame(tableId: Long)
PUT     /tables/:tableId/current-game controllers.TableController.registerPlayer(tableId: Long)

# Games
GET     /games                      controllers.Application.getGames
GET     /games/:gameId              controllers.Application.getGame(gameId: Long)

# NFC data
GET     /nfc-data                   controllers.NfcDataController.getNfcDatas
GET     /nfc-data/:uuid             controllers.NfcDataController.getNfcData(uuid: String)

