# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Players
GET     /users                      controllers.Application.getUsers
GET     /users/:userId              controllers.Application.getUser(userId: Long)

# Tables
GET     /tables                     controllers.Application.getTables
GET     /tables/:tableId            controllers.Application.getTable(tableId: Long)

# Games
GET     /games                      controllers.Application.getGames
GET     /games/:gameId              controllers.Application.getGame(gameId: Long)

# NFC data
GET     /nfc-data                   controllers.Application.getNfcDatas
GET     /nfc-data/:uuid             controllers.Application.getNfcData(uuid: java.util.UUID)

