# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Players
GET     /players                    controllers.MainController.getPlayers
GET     /players/:playerId          controllers.MainController.getPlayer(playerId: String)

# Tables
GET     /tables                     controllers.MainController.getTables
GET     /tables/:tableId            controllers.MainController.getTable(tableId: String)

# Games
GET     /games                      controllers.MainController.getGames
GET     /games/:gameId              controllers.MainController.getGame(gameId: String)


