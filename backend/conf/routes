# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.health

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Players
GET     /users                      controllers.UserController.getUsers
GET     /users/:userId              controllers.UserController.getUser(userId: Long)
GET     /me                         controllers.UserController.getMe

# Tables
GET     /tables                             controllers.TableController.getTables
GET     /tables/:tableId                    controllers.TableController.getTable(tableId: Long)
GET     /tables/:tableId/current_game       controllers.TableController.getCurrentGame(tableId: Long)
POST    /tables/:tableId/sides/:side/goal   controllers.TableController.addGoal(tableId: Long, side: String)

# Games
GET     /games                      controllers.Application.getGames
GET     /games/:gameId              controllers.Application.getGame(gameId: Long)
DELETE  /games/:gameId              controllers.Application.getGame(gameId: Long)
POST    /games/:gameId/finised      controllers.Application.getGame(gameId: Long)

# NFC data
GET     /nfc-data/:uuid             controllers.NfcController.getNfcData(uuid: String)
PUT     /nfc-data/:uuid             controllers.NfcController.registerPlayer(uuid: String)
